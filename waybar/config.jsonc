// -*- mode: jsonc -*-
{
  // "layer": "top", // Waybar at top layer
  // "position": "bottom", // Waybar position (top|bottom|left|right)
  "height": 30, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 4, // Gaps between modules (4px)
  "output": "HDMI-A-1", // Output to display the bar
  // Choose the order of the modules
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  "modules-center": ["clock"],
  "modules-right": ["pulseaudio", "tray"],
  "margin": 1, // Margin around the bar
  "reload_style_on_change": true, // Reload style on change
  "tray": {
    // "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    // "timezone": "America/New_York",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "{:%Y-%m-%d %H:%M:%S}",
    "format-alt": "{:%Y-%m-%d}"
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Ôö© {format_source}",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "on-click": "pavucontrol"
  },
  "hyprland/workspaces": {
    // Show workspace name, icon, and window icons
    "format": "{icon} {name} {windows}",
    // Format icons object for workspace states
    "format-icons": {
      "active": "ÔÜí",
      "default": "ÔÑë",
      "empty": "ÔÑë"
    },
    // Window representation config
    "window-rewrite-default": "üòÑ",
    "window-rewrite": {
      "class<firefox>": "Ôâ©", // Windows whose classes are "firefox"
      "class<firefox> title<.*Github.*>": "ÔÑì", // Windows whose class is "firefox" and title contains "github". Note that "class" always comes first.
      "code": "ÔÑ°"
    },
    "format-window-separator": " ",
    // Always show these workspaces, even when empty
    "persistent-workspaces": {
      "*": 4 // Show 5 workspaces by default on every monitor
    },
    // Switch to workspace on click
    "on-click": "activate",
    // Scroll to switch workspaces
    "on-scroll-up": "activate-prev",
    "on-scroll-down": "activate-next",
    // Sort workspaces by number
    "sort-by": "number",
    // Show special workspaces (like scratchpads)
    "show-special": true
  }
}
